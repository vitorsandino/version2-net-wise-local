FROM node:20-alpine

WORKDIR /app

# Copiar apenas package.json primeiro
COPY backend/package*.json ./

# Instalar dependências de produção de forma otimizada
RUN npm install --omit=dev --prefer-offline --no-audit --no-fund

# Copiar código fonte
COPY backend/ ./

# Expor porta
EXPOSE 3000

# Comando de inicialização
CMD ["node", "src/server.js"]
